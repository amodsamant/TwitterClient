<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivUserBR"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:srcCompat="@mipmap/ic_launcher"
            android:layout_marginRight="10dp"/>


        <TextView
            android:id="@+id/tvUsernameBR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/ivUserBR"
            android:layout_toRightOf="@id/ivUserBR"
            android:text="username"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvScreenNameBR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@ name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tvUsernameBR"
            android:layout_toEndOf="@id/tvUsernameBR"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tvSinceTimeBR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tvScreenNameBR"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tvTextBR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvUsernameBR"
            android:layout_toRightOf="@id/ivUserBR"
            android:layout_below="@id/tvUsernameBR"
            android:text="text to display 140chars"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/ivTweetBR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivUserBR"
            android:layout_below="@id/tvTextBR"
            android:layout_alignLeft="@id/tvTextBR"
            tools:srcCompat="@mipmap/ic_launcher"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/tvReplyBR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivUserBR"
            android:layout_below="@id/ivTweetBR"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/tvRetweetBR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvReplyBR"
            android:layout_below="@id/ivTweetBR"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/tvLikeBR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvRetweetBR"
            android:layout_below="@id/ivTweetBR"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>
</layout>