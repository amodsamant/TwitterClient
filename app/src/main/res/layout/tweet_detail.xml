<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ivUser"
                android:layout_toRightOf="@+id/ivUser"
                android:text="username" />

            <TextView
                android:id="@+id/tvScreenName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@ name"
                android:layout_alignBottom="@+id/ivUser"
                android:layout_toRightOf="@+id/ivUser"
                android:layout_toEndOf="@+id/ivUser" />

            <TextView
                android:id="@+id/tvText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ivUser"
                android:text="text to display 140chars"
                android:maxLines="5"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/ivTweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvText"
                app:srcCompat="@mipmap/ic_launcher" />

            <VideoView
                android:id="@+id/vvTweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivTweet"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <View android:id="@+id/separator2"
                android:background="#ABABAB"
                android:layout_width = "match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvRetweetCount"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btnReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Reply" />

            <Button
                android:id="@+id/btnRetweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retweet"
                android:layout_below="@id/separator2"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"
                android:layout_below="@id/separator2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <View android:id="@+id/separator1"
                android:background="#ABABAB"
                android:layout_width = "match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvRetweetCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="10 RETWEETS" />

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 LIKES"
                android:layout_below="@id/separator1"
                android:layout_toRightOf="@+id/tvRetweetCount"
                android:layout_toEndOf="@+id/tvRetweetCount" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_below="@+id/vvTweet"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvTime"
                android:layout_below="@id/vvTweet"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tvTime"
                android:layout_toRightOf="@+id/tvTime"
                android:text="Date" />

        </RelativeLayout>
    </ScrollView>
</layout>